{
  "manifest_version": 3,
  "name": "V.O.C.E",
  "version": "1.2.0",
  "description": "Monitora o tempo de uso de sites e envia para análise (versão com configuração manual).",
  "minimum_chrome_version": "114",

  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "nativeMessaging"
  ],

  "homepage_url": "html/politica-de-privacidade.html",

  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:8081/"
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": true
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },


  "browser_specific_settings": {
    "gecko": {
      "id": "monitor-tcc@meuprojeto.com"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },

  "action": {
    "default_popup": "html/options.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "V.O.C.E"
  },

  "web_accessible_resources": [
    {
      "resources": ["js/browser-polyfill.min.js"],
      "matches": ["<all_urls>"]  
    }
  ]
}
